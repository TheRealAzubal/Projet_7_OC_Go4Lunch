<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.Fragments.LogOutFragment">


    <TextView
        android:id="@+id/textLogOut"
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/textLogout"
        android:layout_marginStart="54dp"
        android:layout_marginEnd="54dp"
        android:layout_marginTop="100dp" />

    <Button
        android:id="@+id/LogOutButton"
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/textLogOut"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="54dp"
        android:layout_marginEnd="54dp"
        android:layout_marginTop="25dp"
        android:text="@string/logout"
        android:textColor="@color/white"
        android:background="@drawable/button_radius_orange"
        style="?android:attr/borderlessButtonStyle" />

    <TextView
        android:id="@+id/textDeleteAccount"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="@string/textDeleteAccount"
        app:layout_constraintTop_toBottomOf="@id/LogOutButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="54dp"
        android:layout_marginEnd="54dp"
        android:layout_marginTop="150dp" />

    <Button
        android:id="@+id/deleteAccountButton"
        android:layout_marginTop="25dp"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginStart="54dp"
        android:layout_marginEnd="54dp"
        android:text="@string/textButtonDeleteAccount"
        app:layout_constraintTop_toBottomOf="@id/textDeleteAccount"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/white"
        android:background="@drawable/button_radius_red"
        style="?android:attr/borderlessButtonStyle" />

</androidx.constraintlayout.widget.ConstraintLayout>
